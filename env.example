# Environment Variables Template
# Copy this file to .env and update with your values
# 
# For Docker Development: Use service names (postgres, redis) as hostnames
# For Local Development: Use localhost as hostname

# Environment
NODE_ENV=development

# Database
# Docker: postgresql://honoapp:honoapp_password@postgres:5432/honoapp
# Local:  postgresql://user:password@localhost:5432/honoapp
DATABASE_URL=postgresql://honoapp:honoapp_password@postgres:5432/honoapp

# Redis
# Docker: redis://redis:6379
# Local:  redis://localhost:6379
REDIS_URL=redis://redis:6379

# Better Auth
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET=dev-secret-key-minimum-32-characters-long-for-local-development
BETTER_AUTH_URL=http://localhost:3000

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security (optional - auto-generated if not provided)
CSRF_SECRET=
SESSION_SECRET=

# LangChain / LangSmith (optional)
LANGCHAIN_API_KEY=
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=dev
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=

# Port
PORT=3000

